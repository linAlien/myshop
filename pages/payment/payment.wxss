page {
  background-color: #f5f5f5;
  padding-bottom: 3rem;
}

.line {
  height: 2px;
  width: 100%;
  background: -webkit-repeating-linear-gradient(20deg, #009cff, #009cff 10px, #fff 10px, #fff 15px, #ffcb21 15px, #ffcb21 25px, #fff 25px, #fff 30px);
}

.address {
  width: 94%;
  padding: 5% 3%;
  font-size: 0.8rem;
  color: #565656;
  overflow: hidden;
  background-color: white;
}

.address text {
  background-color: #fff;
  display: block;
  width: 100%;
}

.bold {
  font-size: 1rem;
  font-weight: bold;
}

.tel {
  /* margin-left: 3%; */
}

.detail {
  display: block;
}

textarea {
  width: 100%;
  background-color: pink;
  line-height: 1.5rem;
}

.bottom {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: white;
  box-shadow: 0 1px 30px 0px rgba(0, 0, 0, 0.08);
}

.bottom view {
  background-color: white;
  width: 50%;
  line-height: 3rem;
  float: left;
  text-align: center;
  font-size: 0.8rem;
}

.bottom view:nth-child(1) {
  color: #009cff;
  font-weight: bold;
}

.bottom view:nth-child(2) {
  background-color: #58bf1f;
  color: #fff;
}

.order {
  width: 100%;
  background-color: #fff;
  color: #bebebe;
  font-size: 0.8rem;
}

.order .detail {
  color: #bebebe;
  display: block;
  line-height: 3rem;
  border-bottom: 1px solid #ebebeb;
}

.item, .options {
  width: 94%;
  padding: 0 3%;
  margin: 3% 0;
  background-color: #fff;
  overflow: hidden;
}

.item .orderId {
  width: 100%;
  display: block;
  border-bottom: 1px solid #ebebeb;
  box-sizing: border-box;
  margin-bottom: 2%;
  padding: 0.2rem 0;
}

.item .content {
  width: 75%;
  float: left;
  color: #565656;
  padding-bottom: 3%;
}

.item .content text {
  width: 94%;
  margin: 0 auto;
  display: block;
  font-size: 0.8rem;
  line-height: 1.3rem;
}

.price {
  display: block;
  width: 100%;
  clear: both;
  text-align: right;
  font-size: 0.8rem;
  line-height: 1.5rem;
  height: 1.5rem;
  border-bottom: 1px solid #f5f5f5;
}

.item .orderId {
  color: gray;
  font-size: 0.8rem;
}

.item image {
  width: 25%;
  display: block;
  float: left;
}

.col {
  font-size: 0.8rem;
  line-height: 2rem;
  height: 2rem;
  clear: both;
}

.col text:last-child {
  float: right;
}

.bom {
  border-bottom: 1px solid #f5f5f5;
  margin-bottom: 3%;
}

.options button {
  padding: 0.1rem 0.4rem;
  float: right;
  font-size: 0.75rem;
  background-color: white;
  height: 1.7rem;
  color: #565656;
  line-height: 1.5rem;
  border: 1px solid #d6d6d6;
  border-radius: 10rem;
  margin-left: 3%;
}

button::after {
  border: none;
}
