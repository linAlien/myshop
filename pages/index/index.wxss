page {
  background-color: #f5f5f5;
}

::-webkit-scrollbar {
  height: 0;
  width: 0;
  color: transparent;
}

.search-box {
  height: 2rem;
  width: 80%;
  line-height: 2rem;
  background-color: rgba(0, 0, 0, 0.1);
  position: absolute;
  top: 1rem;
  z-index: 99;
  left: 7%;
  padding: 0 3%;
  border-radius: 3rem;
  font-size: 0.8rem;
  color: #ebebeb;
}

.search-box image {
  width: 1rem;
  margin: 0.5rem 0;
  float: left;
}

.swiper-container {
  width: 100%;
  position: relative;
}

.swiper_box {
  width: 100%;
  height: 400rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  top: 85%;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 15rpx;
  height: 15rpx;
  background: #fff;
  border-radius: 50%;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  width: 14rpx;
  opacity: 1;
}

.category {
  width: 100%;
  background-color: white;
  overflow: hidden;
}

.category .t-title {
  display: block;
  font-size: 0.8rem;
  width: 100%;
  color: #565656;
  line-height: 1.5rem;
  margin-top: 0.5rem;
  margin-left: 3%;
}

.category .t-title .t-col {
  color: #f65a4d;
  font-size: 1rem;
  font-weight: bold;
}

.category view {
  width: 20%;
  padding: 2% 2.5%;
  float: left;
}

.category .ba-box {
  width: 95%;
}

.category view image {
  width: 2.5rem;
  height: 2.5rem;
  display: block;
  margin: 5% auto;
  border-radius: 5rem;
}

.category view .ba {
  width: 100%;
  margin: 0 auto;
  border-radius: 0.2rem;
}

.category view text {
  display: block;
  text-align: center;
  font-size: 0.8rem;
  color: #565656;
}

.category view text:last-child {
  color: gray;
}

.brand {
  width: 100%;
  background-color: white;
}

.brand .t-title {
  display: block;
  font-size: 0.8rem;
  width: 100%;
  line-height: 1rem;
  color: #565656;
  margin-top: 0.5rem;
  padding-top: 0.5rem;
}

.brand .t-title .t-col {
  color: #f65a4d;
  line-height: 1rem;
  font-size: 1rem;
  font-weight: bold;
}

.activity, .theme {
  white-space: nowrap;
  width: 100%;
  overflow: hidden;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.activity view {
  width: 60%;
  margin: 1rem 0 0.5rem 4%;
  display: inline-block;
  border-radius: 0.3rem;
}

.activity view:first-child {
  margin-left: 5%;
}

.activity view:last-child {
  margin-right: 5%;
}

.activity view image {
  width: 100%;
  display: block;
  border-radius: 0.3rem;
  box-shadow: 0 1px 17px rgba(150, 150, 150, 0.2);
}

.activity view text {
  width: 100%;
  display: block;
  font-size: 0.8rem;
  margin-top: 0.3rem;
}

.recommend {
  width: 100%;
  background-color: #f5f5f5;
  overflow: hidden;
}

.recommend .t-title {
  display: block;
  font-size: 0.8rem;
  width: 100%;
  line-height: 1rem;
  color: #565656;
  margin-top: 0.5rem;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  background-color: white;
}

.recommend .t-title .t-col {
  color: #f65a4d;
  line-height: 1rem;
  font-size: 1rem;
  font-weight: bold;
  margin-left: 3%;
}

.recommend view {
  width: 32%;
  margin-left: 1%;
  background-color: white;
  float: left;
  margin-bottom: 1%;
}

