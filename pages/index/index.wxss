.recommend view image {
  width: 100%;
  display: block;
}

.recommend view text {
  display: block;
  line-height: 1.2rem;
  font-size: 0.8rem;
}

.recommend view .title {
  width: 94%;
  margin: 0.2rem auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend view .price {
  color: #f65a4d;
  margin-left: 3%;
}

.recommend view .sale {
  margin-left: 3%;
  color: gray;
}

.tip {
  line-height: 3rem;
  width: 100%;
  font-size: 0.8rem;
  color: #b7b7b7;
  text-align: center;
  margin: 0 auto;
  display: block;
}
