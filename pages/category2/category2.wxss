::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.category {
  display: block;
  width: 24%;
  height: 100%;
  background-color: white;
  box-sizing: border-box;
  border-right: 1px solid #f5f5f5;
}

.category scroll-view .item {
  font-size: 0.8rem;
  text-align: center;
  line-height: 3rem;
  border-bottom: 1px solid #f5f5f5;
}

.active {
  color: #ff4a2f;
  box-sizing: border-box;
  border-left: 2px solid #ff4a2f;
}

.actived {
  color: #565656;
  box-sizing: border-box;
  border-left: 1px solid #fff;
}

.total {
  width: 75%;
  float: left;
  position: fixed;
  top: 0;
  right: 0;
  height: 3rem;
  overflow: auto;
}

.total .total-item {
  width: 33%;
  float: left;
  margin: 0.5rem auto;
}

.total .total-item image {
  width: 2rem;
  height: 2rem;
  display: block;
  margin: 0 auto;
}

.total .total-item text {
  font-size: 0.75rem;
  line-height: 1.5rem;
  color: #565656;
  display: block;
  text-align: center;
}

.choose-status {
  font-weight: bold;
  color: #fe5656 !important;
  font-size: 1rem !important;
}

.choose {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 1px 17px rgba(150, 150, 150, 0.2);
}

.choose .btn {
  width: 100%;
  float: left;
  display: block;
  text-align: center;
  line-height: 2.5rem;
  font-weight: normal;
  color: #fff;
  background-color: #fe5656;
  border-radius: 0;
  clear: both;
}

.choose .total-item {
  width: 25%;
  float: left;
  margin: 0.5rem auto;
}

.choose .total-item image {
  width: 2rem;
  height: 2rem;
  display: block;
  margin: 0 auto;
}

.choose .total-item text {
  font-size: 0.7rem;
  line-height: 1.5rem;
  color: #565656;
  display: block;
  text-align: center;
}
