page {
  background-color: #f5f5f5;
}

.top {
  width: 100%;
  background-color: #f65a4d;
  padding: 1rem 0;
}

.top image {
  width: 3.5rem;
  height: 3.5rem;
  display: block;
  border-radius: 3rem;
  margin: 0 auto;
}

.top text {
  text-align: center;
  color: white;
  display: block;
  font-size: 0.8rem;
  line-height: 3rem;
  margin: 0 auto;
}

.col {
  width: 96%;
  padding: 0 2%;
  background-color: white;
  overflow: hidden;
}

.border-bottom {
  border-bottom: 1px solid #f5f5f5;
}

.margin-bottom {
  margin-bottom: 0.5rem;
}

.col image {
  width: 1rem;
  height: 1rem;
  margin: 1rem 0.7rem;
  display: block;
  float: left;
}

.col text {
  font-size: 0.8rem;
  float: left;
  height: 3rem;
  color: #565656;
  line-height: 3rem;
}

.col text:last-child {
  float: right;
  font-weight: bold;
  margin-right: 0.5rem;
  color: gray;
}

.order-options {
  width: 100%;
  padding: 1rem 0;
  background-color: white;
  overflow: hidden;
}

.order-options .options-item {
  /* width: 20%; */
  width: 25%;
  float: left;
  color: #565656;
  text-align: center;
}

.order-options .options-item image {
  display: block;
  width: 1rem;
  height: 1rem;
  margin: 0 auto;
}

.order-options .options-item text {
  font-size: 0.8rem;
}

.support {
  text-align: center;
  color: gray;
  width: 100%;
  line-height: 4rem;
  display: block;
  margin: 0 auto;
  font-size: 0.8rem;
}
