page {
  font-size: 0.85rem;
}

.col {
  width: 94%;
  padding: 3%;
  display: block;
}

textarea {
  width: 90%;
  margin: 3%;
  margin-bottom: 0;
  padding: 2%;
  max-height: 3rem;
  background-color: #f5f5f5;
}

.section {
  width: 90%;
  margin: 0 3%;
  padding: 0 2%;
  display: block;
  line-height: 2.5rem;
  height: 2.5rem;
  color: #565656;
  background-color: #f5f5f5;
}

input {
  width: 90%;
  padding: 1% 2%;
  margin: 0 3%;
  background-color: #f5f5f5;
}

picker {
  color: #000;
}

switch {
  margin-left: 3%;
}

.bottom {
  width: 94%;
  margin: 3%;
  background: linear-gradient(to right, #f10102, #e94c24);
  opacity: 0.8;
  text-align: center;
  color: #fff;
  line-height: 2.5rem;
  font-size: 0.85rem;
  border-radius: 0;
}

.bottom::after {
  border: none;
}
